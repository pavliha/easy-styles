/* Set a basic variable */
base-font-size = 12px

/* Set a variable based on result of mixin call */
body-background = invert(#ccc)

/* Set some basic rules */
body
  color #333
  background #fff

/* Nest rules */
nav
  margin 10px

  ul
    list-style-type none

    > li
      display inline-block

      &.current
        background-color lightblue
